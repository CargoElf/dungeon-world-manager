<%= render 'shared/errors', active_object: @errors %>
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <%= form_for [@player_character] do |f| %>
        <div class="row">
          <div class="col s12">
            <%= f.label "Name" %>
            <div class="input-field inline">
              <%= f.text_field :name, placeholder: "Character Name", class: "form-control" %>
            </div>
          </div>
          <%= f.label "Class"%>
          <%= f.text_field :class_name %>


          <%= f.label "HP Modifier" %>
          <%= f.number_field :hp_mod, in: 4..10, step: 2 %>
        </div>

        <div class="row">

          <div class="col s1">
            <%= f.label "STR" %>
            <%= f.number_field :strength, in: 1..18, step: 1, value: 10 %>
          </div>

          <div class="col s1">
            <%= f.label "DEX" %>
            <%= f.number_field :dexterity, in: 1..18, step: 1, value: 10 %>
          </div>

          <div class="col s1">
            <%= f.label "CON" %>
            <%= f.number_field :constitution, in: 1..18, step: 1, value: 10 %>
          </div>

        </div>

        <div class="row">

          <div class="col s1">
            <%= f.label "INT" %>
            <%= f.number_field :intelligence, in: 1..18, step: 1, value: 10 %>
          </div>

          <div class="col s1">
            <%= f.label "WIS" %>
            <%= f.number_field :wisdom, in: 1..18, step: 1, value: 10 %>
          </div>

          <div class="col s1">
            <%= f.label "CHA" %>
            <%= f.number_field :charisma, in: 1..18, step: 1, value: 10 %>
          </div>

        </div>

        <div class="row">
          <%= f.fields_for :race do |t| %>
            <%= t.label "Race" %>
            <%= t.text_field :name %>
            <%= t.label "Description" %>
            <%= t.text_area :description, class: "form-control"%>
          <% end %>

        </div>

        <div class="row">
          <%= f.fields_for :alignment do |t| %>
            <%= t.label "Alignment" %>
            <%= t.text_field :name %>
            <%= t.label "Description" %>
            <%= t.text_area :description, class: "form-control"%>
          <% end %>

        </div>

        <%= f.submit "Create Character" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
